<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - PoetSite</title>

    <!-- Fonts -->
    <link href="https://fonts.googleapis.com/css2?family=Merriweather:wght@300;400;700&family=Playfair+Display:wght@500;700&display=swap" rel="stylesheet">

    <!-- CSS -->
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
</head>
<body class="bg-light">

<header class="shadow-sm">
    <nav class="navbar navbar-expand-lg navbar-dark bg-dark py-3">
        <div class="container">
            <a class="navbar-brand fw-bold" asp-controller="Home" asp-action="Index">
                🖋 PoetSite
            </a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#mainNavbar">
                <span class="navbar-toggler-icon"></span>
            </button>
            
            <div class="collapse navbar-collapse" id="mainNavbar">
                <ul class="navbar-nav ms-auto mb-2 mb-lg-0">
                    <li class="nav-item">
                        <a class="nav-link" asp-controller="Home" asp-action="Index">Асоси</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" asp-controller="Biography" asp-action="Index">Тарҷумаи ҳол</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" asp-controller="Poems" asp-action="Index">Осор</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" asp-controller="Books" asp-action="Index">Китобхо</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" asp-controller="Gallery" asp-action="Index">Аксхо</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" asp-controller="Audio" asp-action="Index">Аудио</a>
                    </li>
                </ul>
            </div>
        </div>
    </nav>
</header>

<!-- Hero section -->
<section class="hero text-center text-white d-flex align-items-center">
    <div class="container">
        <h1 class="display-4 fw-bold">Шеър овози рӯҳ аст</h1>
        <p class="lead mt-3">Тарҷумаи ҳол, шеърҳо, китобҳо ва хотираҳо</p>
    </div>
</section>

<main class="container my-5">
    @RenderBody()
</main>

<footer class="bg-dark text-light py-4">
    <div class="container text-center">
        <p class="mb-1">© 2025 PoetSite</p>
        <small class="text-secondary">Ҳамаи ҳуқуқ маҳфуз аст</small>
    </div>
</footer>

<script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
@await RenderSectionAsync("Scripts", required: false)
</body>
</html>
