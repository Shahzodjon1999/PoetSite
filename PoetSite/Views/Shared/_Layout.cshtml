<!DOCTYPE html>
<html lang="tg">
<head>
    <meta charset="utf-8" />
    <title>@ViewData["Title"] - Лоиқ Шералӣ</title>
    <meta name="viewport" content="width=device-width, initial-scale=1" />

    <!-- Fonts -->
    <link href="https://fonts.googleapis.com/css2?family=Merriweather:wght@300;400;700&family=Playfair+Display:wght@500;700&display=swap" rel="stylesheet">

    <!-- CSS -->
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
</head>

<body>

<header class="main-header">
    <nav class="navbar navbar-expand-lg navbar-dark bg-custom">
            <div class="container">
                <a class="navbar-brand fw-bold" asp-controller="Home" asp-action="Index">🖋 Лоиқ Шералӣ</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#mainNavbar">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="collapse navbar-collapse" id="mainNavbar">
                    <ul class="navbar-nav ms-auto mb-2 mb-lg-0">
                        <li class="nav-item"><a class="nav-link" asp-controller="Home" asp-action="Index">Асосӣ</a></li>
                        <li class="nav-item"><a class="nav-link" asp-controller="Biography" asp-action="Index">Тарҷумаи ҳол</a></li>
                        <li class="nav-item"><a class="nav-link" asp-controller="Poems" asp-action="Index">Шеърҳо</a></li>
                        <li class="nav-item"><a class="nav-link" asp-controller="Books" asp-action="Index">Китобҳо</a></li>
                        <li class="nav-item"><a class="nav-link" asp-controller="Gallery" asp-action="Index">Аксҳо</a></li>
                        <li class="nav-item"><a class="nav-link" asp-controller="Audio" asp-action="Index">Аудио</a></li>
                    </ul>
                </div>
            </div>
        </nav>
</header>

@RenderSection("Hero", required: false)

<main class="container content">
    @RenderBody()
</main>

<footer class="main-footer">
    <p>© 2025 Лоиқ Шералӣ</p>
    <small>Ҳамаи ҳуқуқ маҳфуз аст</small>
</footer>

<script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>

