@model List<GalleryImage>

<h2 class="mb-4">Аксҳо</h2>

<div class="row">
    @foreach (var img in Model)
    {
        <div class="col-md-4 mb-4">
            <div class="card shadow-sm">
                <img src="@img.ImagePath" class="card-img-top" style="height:200px; object-fit:cover" />
                @if (!string.IsNullOrEmpty(img.Caption))
                {
                    <div class="card-body">
                        <p class="card-text">@img.Caption</p>
                    </div>
                }
            </div>
        </div>
    }
</div> 