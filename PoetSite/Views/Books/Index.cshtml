@model List<Book>

<h3>Китобҳо</h3>
<hr />

<div class="row">
    @foreach (var book in Model)
    {
        <div class="col-md-4 mb-4">
            <div class="card shadow-sm">
                <div class="card-body">
                    <h5>@book.Title (@book.Year)</h5>
                    <p>@book.Description</p>
                </div>
            </div>
        </div>
    }
</div>