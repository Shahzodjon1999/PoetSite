@model PoetSite.Models.Book
@{
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}
<h2>Таҳрири китоб</h2>

<form asp-area="Admin" asp-controller="Books" asp-action="Edit" method="post">
    @Html.AntiForgeryToken()
    <input type="hidden" asp-for="Id" />

    <div class="mb-3">
        <label asp-for="Title"></label>
        <input name="Title" class="form-control" />
    </div>

    <div class="mb-3">
        <label>Description</label>
        <textarea asp-for="Description"
                  class="form-control"
                  rows="4"></textarea>
    </div>

    @if (!string.IsNullOrEmpty(Model.CoverImage))
    {
        <div class="mb-3">
            <img src="@Model.CoverImage"
                 class="img-thumbnail"
                 style="max-height:150px" />
        </div>
    }
    
    <button class="btn btn-success">💾 Сабт кардан</button>
    <a class="btn btn-secondary" href="/Admin/Books/Index">Бекор кардан</a>
</form>
