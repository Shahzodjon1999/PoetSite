@model IEnumerable<PoetSite.Models.Book>
@{
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}
<h2 class="mb-4">📚 Китобҳо</h2>

<a class="btn btn-primary mb-3" href="/Admin/Books/Create">+ Иловаи китоб</a>

<table class="table table-bordered table-hover align-middle">
    <thead class="table-light">
    <tr>
        <th>Cover</th>
        <th>Title</th>
        <th width="200">Actions</th>
    </tr>
    </thead>

    <tbody>
    @foreach (var item in Model)
    {
        <tr>
            <td width="120">
                @if (!string.IsNullOrEmpty(item.CoverImage))
                {
                    <img src="@item.CoverImage"
                         class="img-thumbnail"
                         style="max-height:100px" />
                }
            </td>
            <td>@item.Title</td>
            <td>
                <a class="btn btn-sm btn-warning"
                   href="/Admin/Books/Edit/@item.Id">
                    ✏ Таҳрир
                </a>

                <a class="btn btn-sm btn-danger"
                   href="/Admin/Books/Delete/@item.Id">
                    🗑 Нест кардан
                </a>
            </td>
        </tr>
    }
    </tbody>
</table>
