@model PoetSite.Models.AudioPoem

@{
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}
<h2>Нест кардани аудио</h2>

<p>Оё шумо мутмаин ҳастед, ки мехоҳед нест кунед:</p>

<strong>@Model.Title</strong>
<br /><br />

<audio controls>
    <source src="@Model.AudioPath" type="audio/mpeg" />
</audio>

<form asp-action="Delete" method="post" class="mt-3">
    @Html.AntiForgeryToken()
    <input type="hidden" asp-for="Id" />
    <button class="btn btn-danger">🗑 Бале, Нест кардан</button>
    <a class="btn btn-secondary" href="/Admin/Audio/Index">Бекор кардан</a>
</form>